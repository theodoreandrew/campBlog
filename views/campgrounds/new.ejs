<% include ../partials/header %>

<div class="container">
	<h1 style="text-align : center; margin: 15px 0 15px 0;">Create a new Campground</h1>

	<form action="/campgrounds" method="POST" style="text-align: center;">
		<input class="form-control" type="text" name="campground[name]" placeholder="Campground Name" style="width: 30%; margin: 10px auto;">
		<input class="form-control" type="text" name="campground[image]" placeholder="Campground Image url" style="width: 30%; margin: 10px auto;">
		<input class="form-control" type="text" name="campground[description]" placeholder="Campground Description" style="width: 30%; margin: 10px auto;">
		<button class="btn-primary btn-lg" style="width: 30%;">Submit</button>
	</form>
	
	<div class="container" style="margin-top: 15px;">
		<center><a href="/campgrounds">View All Campgrounds</a></center>
	</div>
	
</div>

<% include ../partials/footer %>